post_install() {
	for i in error auth user messages daemon misc; do
		echo "	>> Create directory for log on /var/log/s6serv/syslogds6/${i}" 
		if ! [ -d /var/log/s6serv/syslogds6/${i} ]; then
			mkdir -p -m 0755 /var/log/s6serv/syslogds6/${i}
		fi
		chown -R s6log:log /var/log/s6serv/syslogds6/${i} 
	done
}
post_upgrade(){
	post_install
}
